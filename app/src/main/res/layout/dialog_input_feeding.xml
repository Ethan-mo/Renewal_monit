<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/padding_3"
    android:background="@drawable/bg_dialog_white_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorTextNegative"
            android:text="Title"
            android:fontFamily="medium"
            android:layout_marginTop="@dimen/dialog_title_section_margin_bottom"
            android:layout_marginBottom="@dimen/dialog_title_section_margin_bottom" />

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_dialog_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/font_5_5sp"
            android:text="Contents text size is 11sp.\nLine spacing is 20sp"
            android:textColor="@color/colorTextNegative"
            android:textSize="@dimen/font_12sp"
            android:fontFamily="medium"
            android:layout_marginBottom="@dimen/dialog_title_section_margin_bottom"/>

        <View style="@style/divider_horizontal_line" />

        <LinearLayout
            android:id="@+id/lctn_dialog_mode_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_mode_select_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:maxWidth="@dimen/margin_60"
                android:drawableTop="@drawable/ic_diary_feeding_nursed_breast_milk_selector"
                app:compoundDrawableWidth="@dimen/notification_filter_icon_size"
                app:compoundDrawableHeight="@dimen/notification_filter_icon_size"
                android:background="@color/colorTransparent"
                android:text="@string/notification_feeding_nursed_breast_milk"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_mode_select_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:maxWidth="@dimen/margin_60"
                android:drawableTop="@drawable/ic_diary_feeding_bottle_breast_milk_selector"
                app:compoundDrawableWidth="@dimen/notification_filter_icon_size"
                app:compoundDrawableHeight="@dimen/notification_filter_icon_size"
                android:background="@color/colorTransparent"
                android:text="@string/notification_feeding_bottle_breast_milk"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_mode_select_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:maxWidth="@dimen/margin_60"
                android:drawableTop="@drawable/ic_diary_feeding_bottle_formula_milk_selector"
                app:compoundDrawableWidth="@dimen/notification_filter_icon_size"
                app:compoundDrawableHeight="@dimen/notification_filter_icon_size"
                android:background="@color/colorTransparent"
                android:text="@string/notification_feeding_bottle_formula_milk" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_mode_select_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:maxWidth="@dimen/margin_60"
                android:drawableTop="@drawable/ic_diary_feeding_baby_food_selector"
                app:compoundDrawableWidth="@dimen/notification_filter_icon_size"
                app:compoundDrawableHeight="@dimen/notification_filter_icon_size"
                android:background="@color/colorTransparent"
                android:text="@string/notification_feeding_baby_food"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_extra_input_less_step2"
                android:layout_width="@dimen/margin_25"
                android:layout_height="@dimen/margin_25"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@drawable/ic_less_step2"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_extra_input_less_step1"
                android:layout_width="@dimen/margin_25"
                android:layout_height="@dimen/margin_25"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/ic_less_step1"/>

            <goodmonit.monit.com.kao.widget.NotoEditText
                android:id="@+id/et_dialog_extra_input"
                android:layout_width="@dimen/margin_50"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:padding="@dimen/padding_5"
                android:gravity="right"
                android:background="@drawable/bg_dialog_input_edittext"/>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_dialog_extra_input_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:textSize="@dimen/font_12sp"
                android:text="@string/time_elapsed_minute"
                android:textColor="@color/colorTextPrimary"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_extra_input_more_step1"
                android:layout_width="@dimen/margin_25"
                android:layout_height="@dimen/margin_25"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@drawable/ic_more_step1"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_dialog_extra_input_more_step2"
                android:layout_width="@dimen/margin_25"
                android:layout_height="@dimen/margin_25"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@drawable/ic_more_step2"/>
        </LinearLayout>

        <View style="@style/divider_horizontal_line" />

        <goodmonit.monit.com.kao.widget.TitlebarDatePicker
            android:id="@+id/wdp_dialog_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View style="@style/divider_horizontal_line" />

        <goodmonit.monit.com.kao.widget.TitlebarTimePicker
            android:id="@+id/wtp_dialog_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View style="@style/divider_horizontal_line_with_margin"
            android:background="@color/colorDividerForDialogButton" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_section_height"
            android:orientation="horizontal">

            <goodmonit.monit.com.kao.widget.NotoButton
                style="@style/dialog_text_negative_button"
                android:id="@+id/btn_dialog_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_cancel"
                android:textSize="@dimen/font_16sp"
                android:fontFamily="medium" />

            <View style="@style/divider_vertical_line_with_margin"
                android:background="@color/colorDividerForDialogButton"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                style="@style/dialog_text_positive_button"
                android:id="@+id/btn_dialog_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_ok"
                android:textSize="@dimen/font_16sp"
                android:fontFamily="medium"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>