<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/yk_signin_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_activity_signin_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginStart="@dimen/margin_50"
                android:layout_marginEnd="@dimen/margin_50"
                android:layout_gravity="top|end"
                android:src="@drawable/yk_splash" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_activity_signin_yk_signin"
                android:layout_width="@dimen/signin_yk_button_width"
                android:layout_height="@dimen/signin_yk_button_height"
                android:layout_marginTop="@dimen/below_next_button_margin"
                android:layout_marginBottom="@dimen/below_next_button_margin"
                android:background="@drawable/bg_btn_radius_yk_selector"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="medium"
                android:text="@string/title_signin" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_activity_signin_monit_signin"
                android:layout_width="@dimen/signin_yk_button_width"
                android:layout_height="@dimen/signin_yk_button_height"
                android:layout_marginBottom="@dimen/below_next_button_margin"
                android:background="@drawable/bg_btn_radius_yk_selector"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="medium"
                android:text="MONIT 로그인"
                android:visibility="gone" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_activity_signin_yk_signup"
                android:layout_width="@dimen/signin_yk_button_width"
                android:layout_height="@dimen/signin_yk_button_height"
                android:layout_marginBottom="@dimen/below_next_button_margin"
                android:background="@drawable/bg_btn_radius_yk_selector"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="medium"
                android:text="@string/title_signup" />

        </LinearLayout>

        <include layout="@layout/widget_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</ScrollView>