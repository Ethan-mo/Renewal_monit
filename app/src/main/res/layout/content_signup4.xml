<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_activity_signup_completed_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/signup_logo_image_size"
                android:layout_marginTop="@dimen/signup_logo_image_section_margin_top"
                android:layout_marginBottom="@dimen/signup_logo_image_section_margin_bottom"
                android:src="@drawable/ic_logo_green"
                android:layout_gravity="center_horizontal"/>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_activity_signup_completed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_30"
                android:gravity="center"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPositive"
                android:fontFamily="medium"
                android:text="@string/account_signup_welcome_title" />

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20"
                android:maxWidth="@dimen/signup_description_max_width"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:fontFamily="medium"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/account_signup_welcome_membershipcode" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <goodmonit.monit.com.kao.widget.NotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:maxWidth="@dimen/signup_description_max_width"
                    android:layout_gravity="center_horizontal"
                    android:paddingEnd="@dimen/padding_10"
                    android:gravity="center"
                    android:fontFamily="medium"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/account_shortid" />

                <goodmonit.monit.com.kao.widget.NotoTextView
                    android:id="@+id/tv_activity_signup_membership_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:maxWidth="@dimen/signup_description_max_width"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:fontFamily="medium"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/colorTextPositive"
                    android:text="ABCDEFG"/>
            </LinearLayout>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_activity_signup_completed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:fontFamily="medium"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/account_signup_welcome_description"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>