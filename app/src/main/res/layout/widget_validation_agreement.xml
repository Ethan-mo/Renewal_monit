<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rctn_validation_agreement_checked"
        android:layout_width="@dimen/signup_validation_check_section_size"
        android:layout_height="@dimen/signup_validation_check_section_size">

        <ImageView
            android:id="@+id/iv_validation_agreement_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_validation_check_default"/>
    </RelativeLayout>

    <goodmonit.monit.com.kao.widget.NotoTextView
        android:id="@+id/tv_validation_agreement_title"
        android:layout_width="@dimen/signup_item_title_width"
        android:layout_height="@dimen/signup_item_height"
        android:layout_toEndOf="@id/rctn_validation_agreement_checked"
        android:gravity="center_vertical"
        android:text="@string/legal_agreement"
        android:textSize="@dimen/font_14sp"
        android:textColor="@color/colorTextPrimary" />

    <LinearLayout
        android:id="@+id/lctn_validation_agreement_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_validation_agreement_title"
        android:orientation="vertical">

        <goodmonit.monit.com.kao.widget.NotoButton
            android:id="@+id/btn_validation_agreement_agreement"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/signup_item_height"
            android:paddingEnd="@dimen/padding_10"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"
            android:text="@string/legal_agree_all"
            android:background="@color/colorTransparent"
            android:drawableLeft="@drawable/btn_radio_default"
            app:compoundDrawableWidth="@dimen/signup_radio_button_size"
            app:compoundDrawableHeight="@dimen/signup_radio_button_size"
            android:drawablePadding="@dimen/padding_10" />

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_validation_agreement_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_validation_agreement_title"
            android:layout_marginBottom="@dimen/margin_6"
            android:textColor="@color/colorTextWarning"
            android:textSize="@dimen/font_12sp"
            android:text="Please input email type"/>

        <View style="@style/divider_horizontal_line" />

        <goodmonit.monit.com.kao.widget.NotoButton
            android:id="@+id/btn_validation_agreement_privacy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_item_agreement_height"
            android:paddingStart="@dimen/padding_30"
            android:paddingEnd="@dimen/padding_10"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_12sp"
            android:text="@string/legal_privacy"
            android:background="@drawable/bg_btn_transparent_light_selector"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/ic_direction_right_black_light"
            app:compoundDrawableWidth="@dimen/signup_radio_button_size"
            app:compoundDrawableHeight="@dimen/signup_radio_button_size"
            android:drawablePadding="@dimen/padding_10" />

        <goodmonit.monit.com.kao.widget.NotoButton
            android:id="@+id/btn_validation_agreement_terms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_item_agreement_height"
            android:paddingStart="@dimen/padding_30"
            android:paddingEnd="@dimen/padding_10"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_12sp"
            android:text="@string/legal_terms"
            android:background="@drawable/bg_btn_transparent_light_selector"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/ic_direction_right_black_light"
            app:compoundDrawableWidth="@dimen/signup_radio_button_size"
            app:compoundDrawableHeight="@dimen/signup_radio_button_size"
            android:drawablePadding="@dimen/padding_10" />

        <goodmonit.monit.com.kao.widget.NotoButton
            android:id="@+id/btn_validation_agreement_warranty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_item_agreement_height"
            android:paddingStart="@dimen/padding_30"
            android:paddingEnd="@dimen/padding_10"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_12sp"
            android:text="@string/legal_warranty"
            android:background="@drawable/bg_btn_transparent_light_selector"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/ic_direction_right_black_light"
            app:compoundDrawableWidth="@dimen/signup_radio_button_size"
            app:compoundDrawableHeight="@dimen/signup_radio_button_size"
            android:drawablePadding="@dimen/padding_10"
            android:visibility="gone"/>

    </LinearLayout>

    <View style="@style/divider_horizontal_line"
        android:id="@+id/v_validation_agreement_underline"
        android:layout_below="@id/lctn_validation_agreement_contents"/>
</RelativeLayout>
