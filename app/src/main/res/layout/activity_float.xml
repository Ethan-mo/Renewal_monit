<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/float_notification_add_button_size"
        android:orientation="vertical">

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="데이터 수집 프로그램 참여 안내"
            android:fontFamily="medium"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"/>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="1. 대/소변 감지 정확도를 높이기 위해 데이터 수집 프로그램을 진행중이므로 대/소변시 알람이 울리지 않거나, 잘못 울릴 때가 있습니다. 양해 부탁드립니다."
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"/>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="2. 센서 등록 후 센서 알람을 설정해주시기 바랍니다.\n앱실행 > 센서 선택 > 우측상단 설정 > 대변/소변 ON, 방귀 OFF"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"/>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="3. 대/소변 알람과 기저귀 상태 확인 알람(기저귀 교체 10분/40분 후)을 받으시면, 가능한 한 빨리(5분 이내) 기저귀에서 센서를 떼지 않은 채로 살짝 확인하시고 입력 부탁드립니다."
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"/>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="4. 수유, 기저귀, 수면 등의 다이어리 정보 입력시 잘못 입력된 경우에는 수정기능이 아직 없으니, 메시지를 삭제하고 다시 입력해주시기 바랍니다."
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"/>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="5. 대/소변 알람과 기저귀 확인요청 알람시 대변 등으로 인해 실제 기저귀 교체를 하시는 경우, 번거로우시겠지만 기저귀 교체 기록과 기저귀 상태 피드백 모두 입력 해주시기 바랍니다."
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/btn_float_notification_close"
            android:layout_width="@dimen/float_notification_add_button_size"
            android:layout_height="@dimen/float_notification_add_button_size"
            android:background="@drawable/ic_float_diaper_sensor_close"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/btn_float_notification_add_chat"
            android:layout_width="@dimen/float_notification_icon_size"
            android:layout_height="@dimen/float_notification_icon_size"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_diary_user_comment"
            android:layout_above="@id/btn_float_notification_close"/>

        <Button
            android:id="@+id/btn_float_notification_add_sleep"
            android:layout_width="@dimen/float_notification_icon_size"
            android:layout_height="@dimen/float_notification_icon_size"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_diary_sleep"
            android:layout_above="@id/btn_float_notification_add_chat"/>

        <Button
            android:id="@+id/btn_float_notification_add_diaper"
            android:layout_width="@dimen/float_notification_icon_size"
            android:layout_height="@dimen/float_notification_icon_size"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_sensor_diaper_activated"
            android:layout_above="@id/btn_float_notification_add_sleep"/>

        <Button
            android:id="@+id/btn_float_notification_add_feeding_bottle_formula_milk"
            android:layout_width="@dimen/float_notification_icon_size"
            android:layout_height="@dimen/float_notification_icon_size"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_diary_feeding_bottle_formula_milk"
            android:layout_above="@id/btn_float_notification_add_diaper"/>

    </RelativeLayout>

</RelativeLayout>
