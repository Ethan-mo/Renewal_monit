<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundWhiteLight"
    android:orientation="vertical">

    <View
        android:id="@+id/v_widget_setting_text_divider_margin_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_20" />

    <goodmonit.monit.com.kao.widget.NotoTextView
        android:id="@+id/tv_widget_setting_text_divider_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/padding_20"
        android:paddingEnd="@dimen/padding_20"
        android:paddingBottom="@dimen/padding_5"
        android:textSize="@dimen/font_14sp"
        android:textColor="@color/colorTextPrimary"
        android:text="Temperature" />

    <View
        android:id="@+id/v_widget_setting_text_divider_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_20"
        android:visibility="gone"/>

    <View style="@style/divider_horizontal_line_light"
        android:id="@+id/v_widget_setting_text_divider_bottom" />
</LinearLayout>
