<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundWhiteLight">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/bg_guide_direct_connection" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding_20">

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_guide_direct_connection_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guide_direct_connection_description"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:id="@+id/lctn_guide_direct_connection_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_guide_direct_connection_description"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/iv_guide_direct_connection_description1"
                android:layout_width="@dimen/signup_validation_check_section_size"
                android:layout_height="@dimen/signup_validation_check_section_size"
                android:background="@drawable/ic_validation_check_valid"/>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_guide_direct_connection_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide_direct_connection_description1"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lctn_guide_direct_connection_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/lctn_guide_direct_connection_description1"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/iv_guide_direct_connection_description2"
                android:layout_width="@dimen/signup_validation_check_section_size"
                android:layout_height="@dimen/signup_validation_check_section_size"
                android:background="@drawable/ic_validation_check_valid"/>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_guide_direct_connection_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide_direct_connection_description2"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lctn_guide_direct_connection_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/lctn_guide_direct_connection_description2"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/iv_guide_direct_connection_description3"
                android:layout_width="@dimen/signup_validation_check_section_size"
                android:layout_height="@dimen/signup_validation_check_section_size"
                android:background="@drawable/ic_validation_check_valid"/>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_guide_direct_connection_description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide_direct_connection_description3"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>