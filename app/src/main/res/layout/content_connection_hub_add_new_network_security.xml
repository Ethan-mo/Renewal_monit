<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_20"
    android:background="@color/colorBackgroundWhiteLight">

    <goodmonit.monit.com.kao.widget.NotoTextView
        android:id="@+id/tv_connection_hub_add_new_network_security_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_20"
        android:paddingEnd="@dimen/padding_20"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/font_16sp"
        android:text="@string/connection_hub_add_new_network_title"
        android:fontFamily="medium" />

    <goodmonit.monit.com.kao.widget.NotoTextView
        android:id="@+id/tv_connection_hub_add_new_network_security_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_20"
        android:paddingEnd="@dimen/padding_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_6"
        android:layout_below="@id/tv_connection_hub_add_new_network_security_title"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/font_14sp"
        android:text="@string/connection_hub_network_security" />

    <ScrollView
        android:id="@+id/sv_connection_hub_add_new_network_security_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_connection_hub_add_new_network_security_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_hub_add_new_network_security_none"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_input_ap_password_height"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/connection_hub_network_security_none"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:gravity="start|center_vertical"
                android:background="@color/colorTransparent"
                android:drawableRight="@drawable/bg_btn_green_check_selector"
                app:compoundDrawableWidth="@dimen/connection_select_new_network_security_direction_size"
                app:compoundDrawableHeight="@dimen/connection_select_new_network_security_direction_size" />

            <View style="@style/divider_horizontal_line" android:layout_marginStart="20dp" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_hub_add_new_network_security_wep"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_input_ap_password_height"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/connection_hub_network_security_wep"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:gravity="start|center_vertical"
                android:background="@color/colorTransparent"
                android:drawableRight="@drawable/bg_btn_green_check_selector"
                app:compoundDrawableWidth="@dimen/connection_select_new_network_security_direction_size"
                app:compoundDrawableHeight="@dimen/connection_select_new_network_security_direction_size" />

            <View style="@style/divider_horizontal_line" android:layout_marginStart="20dp"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_hub_add_new_network_security_wpa"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_input_ap_password_height"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/connection_hub_network_security_wpa"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:gravity="start|center_vertical"
                android:background="@color/colorTransparent"
                android:drawableRight="@drawable/bg_btn_green_check_selector"
                app:compoundDrawableWidth="@dimen/connection_select_new_network_security_direction_size"
                app:compoundDrawableHeight="@dimen/connection_select_new_network_security_direction_size" />

            <View style="@style/divider_horizontal_line" android:layout_marginStart="20dp"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_hub_add_new_network_security_wpa2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_input_ap_password_height"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/connection_hub_network_security_wpa2"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:gravity="start|center_vertical"
                android:background="@color/colorTransparent"
                android:drawableRight="@drawable/bg_btn_green_check_selector"
                app:compoundDrawableWidth="@dimen/connection_select_new_network_security_direction_size"
                app:compoundDrawableHeight="@dimen/connection_select_new_network_security_direction_size" />

            <View style="@style/divider_horizontal_line" android:layout_marginStart="20dp"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_hub_add_new_network_security_wpa_tkip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_input_ap_password_height"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/connection_hub_network_security_wpa_tkip"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:gravity="start|center_vertical"
                android:background="@color/colorTransparent"
                android:drawableRight="@drawable/bg_btn_green_check_selector"
                app:compoundDrawableWidth="@dimen/connection_select_new_network_security_direction_size"
                app:compoundDrawableHeight="@dimen/connection_select_new_network_security_direction_size" />

            <View style="@style/divider_horizontal_line" android:layout_marginStart="20dp"/>

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_hub_add_new_network_security_wpa2_tkip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_input_ap_password_height"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/connection_hub_network_security_wpa2_tkip"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:gravity="start|center_vertical"
                android:background="@color/colorTransparent"
                android:drawableRight="@drawable/bg_btn_green_check_selector"
                app:compoundDrawableWidth="@dimen/connection_select_new_network_security_direction_size"
                app:compoundDrawableHeight="@dimen/connection_select_new_network_security_direction_size" />

        </LinearLayout>

    </ScrollView>
    <View style="@style/divider_horizontal_line"
        android:layout_below="@id/tv_connection_hub_add_new_network_security_detail" />

    <View style="@style/divider_horizontal_line"
        android:layout_below="@id/sv_connection_hub_add_new_network_security_list" />
</RelativeLayout>