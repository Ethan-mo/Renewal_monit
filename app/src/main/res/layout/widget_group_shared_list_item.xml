<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View style="@style/divider_horizontal_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_device_row_height"
        android:background="@color/colorWhite">

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_group_shared_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_20"
            android:textSize="@dimen/font_16sp"
            android:textColor="@color/colorTextPrimary"
            android:text="MonitMom"/>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_group_shared_list_short_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_toEndOf="@id/tv_group_shared_list_id"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorTextPrimaryLight"
            android:text="ABCDEF"/>

        <goodmonit.monit.com.kao.widget.NotoButton
            android:id="@+id/btn_group_shared_list_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:background="@color/colorTransparent"
            android:textSize="@dimen/font_16sp"
            android:textColor="@color/colorTextWarning"
            android:text="@string/btn_group_leave"/>
    </RelativeLayout>

    <View style="@style/divider_horizontal_line" />

    <LinearLayout
        android:id="@+id/lctn_group_shared_list_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Add Device List Here -->
    </LinearLayout>

    <goodmonit.monit.com.kao.widget.NotoTextView
        android:id="@+id/tv_group_shared_list_device_list_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:gravity="center"
        android:text="@string/group_share_device_list_empty"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/font_14sp"/>

    <View style="@style/divider_horizontal_line" />

</LinearLayout>