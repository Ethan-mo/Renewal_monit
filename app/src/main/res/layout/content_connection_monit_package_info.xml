<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:validation="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_20"
        android:background="@color/colorBackgroundWhiteLight"
        android:orientation="vertical">

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_connection_monit_package_completed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_16sp"
            android:text="The package is connected"
            android:fontFamily="medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10">

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_connection_monit_package_completed_sensor_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_20"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/font_14sp"
                android:text="@string/setting_title_sensor_information"
                android:layout_centerVertical="true"
                android:fontFamily="medium" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_monit_package_completed_sensor_info_help"
                android:layout_width="@dimen/help_button_size"
                android:layout_height="@dimen/help_button_size"
                android:layout_marginStart="@dimen/margin_6"
                android:background="@drawable/ic_help"
                android:layout_toEndOf="@id/tv_connection_monit_package_completed_sensor_info"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View style="@style/divider_horizontal_line" />

        <include layout="@layout/widget_input_babyinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View style="@style/divider_horizontal_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10">

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_connection_monit_package_completed_hub_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_20"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/font_14sp"
                android:text="@string/setting_title_hub_information"
                android:fontFamily="medium"
                android:layout_centerVertical="true" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_connection_monit_package_completed_hub_info_help"
                android:layout_width="@dimen/help_button_size"
                android:layout_height="@dimen/help_button_size"
                android:layout_marginStart="@dimen/margin_6"
                android:background="@drawable/ic_help"
                android:layout_toEndOf="@id/tv_connection_monit_package_completed_hub_info"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/divider_horizontal_line" />
        <include layout="@layout/widget_input_hubinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View style="@style/divider_horizontal_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"/>

    </LinearLayout>
</ScrollView>
