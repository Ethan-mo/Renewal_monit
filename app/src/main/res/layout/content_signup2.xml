<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_activity_signup_check_auth_email_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/signup_logo_image_size"
                android:layout_marginTop="@dimen/signup_logo_image_section_margin_top"
                android:layout_marginBottom="@dimen/signup_logo_image_section_margin_bottom"
                android:src="@drawable/ic_logo_green"
                android:layout_gravity="center_horizontal"/>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_30"
                android:gravity="center"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPositive"
                android:fontFamily="medium"
                android:text="@string/signup_check_auth_email" />

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_activity_signup_check_auth_email_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_30"
                android:maxWidth="@dimen/signup_description_max_width"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:fontFamily="medium"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPositive"
                android:text="@string/signup_check_auth_email_description" />

            <goodmonit.monit.com.kao.widget.NotoButton
                android:id="@+id/btn_activity_signup_send_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/signup_send_auth_email"
                android:background="@drawable/bg_underline_black"/>

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_activity_signup_not_checked_auth_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:maxWidth="@dimen/below_next_button_width"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/font_12sp"
                android:textColor="@color/colorTextWarning"
                android:text="@string/signup_not_authenticated"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>