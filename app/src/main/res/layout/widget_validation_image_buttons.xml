<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rctn_validation_image_buttons_checked"
        android:layout_width="@dimen/signup_validation_check_section_size"
        android:layout_height="@dimen/signup_validation_check_section_size">

        <ImageView
            android:id="@+id/iv_validation_image_buttons_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_validation_check_default"/>
    </RelativeLayout>

    <goodmonit.monit.com.kao.widget.NotoTextView
        android:id="@+id/tv_validation_image_buttons_title"
        android:layout_width="@dimen/signup_item_title_width"
        android:layout_height="@dimen/signup_item_height"
        android:layout_toEndOf="@id/rctn_validation_image_buttons_checked"
        android:gravity="center_vertical"
        android:text="@string/account_baby_eating"
        android:textSize="@dimen/font_14sp"
        android:textColor="@color/colorTextPrimary" />

        <LinearLayout
            android:id="@+id/ctn_validation_image_buttons_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_item_height"
            android:layout_toEndOf="@id/tv_validation_image_buttons_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_validation_image_buttons_item1"
                android:layout_width="@dimen/signup_item_height"
                android:layout_height="@dimen/signup_item_height"
                android:layout_marginStart="@dimen/margin_10"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_eating_breast_milk_btn_selector"
                android:background="@color/colorTransparent"/>

            <ImageButton
                android:id="@+id/btn_validation_image_buttons_item2"
                android:layout_width="@dimen/signup_item_height"
                android:layout_height="@dimen/signup_item_height"
                android:layout_marginStart="@dimen/margin_10"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_eating_milk_btn_selector"
                android:background="@color/colorTransparent"/>

            <ImageButton
                android:id="@+id/btn_validation_image_buttons_item3"
                android:layout_width="@dimen/signup_item_height"
                android:layout_height="@dimen/signup_item_height"
                android:layout_marginStart="@dimen/margin_10"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_eating_food_btn_selector"
                android:background="@color/colorTransparent"/>

        </LinearLayout>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_validation_image_buttons_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_validation_image_buttons_title"
            android:layout_below="@id/ctn_validation_image_buttons_text"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/font_12sp"
            android:text="@string/setting_sensor_eating_summary"/>

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_validation_image_buttons_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_validation_image_buttons_title"
            android:layout_below="@id/tv_validation_image_buttons_hint"
            android:layout_marginBottom="@dimen/margin_6"
            android:textColor="@color/colorTextWarning"
            android:textSize="@dimen/font_12sp"
            android:text="@string/account_warning_eating"/>

        <View style="@style/divider_horizontal_line"
            android:id="@+id/v_validation_image_buttons_underline"
            android:layout_toEndOf="@id/rctn_validation_image_buttons_checked"
            android:layout_below="@id/tv_validation_image_buttons_warning"/>

</RelativeLayout>
