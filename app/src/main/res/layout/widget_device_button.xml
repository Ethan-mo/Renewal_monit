<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rctn_widget_device_button"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_device_detail_row_height"
    android:background="@drawable/bg_btn_rect_grey_green_selector"
    android:layout_margin="@dimen/margin_6">

    <ImageView
        android:id="@+id/iv_widget_device_button_icon"
        android:layout_width="@dimen/group_detail_row_icon_size"
        android:layout_height="@dimen/group_detail_row_icon_size"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_device_sensor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_widget_device_button_icon"
        android:paddingStart="@dimen/padding_5"
        android:paddingEnd="@dimen/padding_5">

        <LinearLayout
            android:id="@+id/lctn_widget_device_button_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_widget_device_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_6"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorTextPrimary"
                android:text="Monit" />

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_widget_device_button_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimaryLight"
                android:text="AABBCC" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>