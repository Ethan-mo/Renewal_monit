<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:validation="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_20"
        android:background="@color/colorBackgroundWhiteLight"
        android:orientation="vertical">

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_connection_hub_connected_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_16sp"
            android:text="@string/connection_hub_connected_title"
            android:fontFamily="medium" />

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_connection_hub_connected_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_14sp"
            android:text="@string/connection_hub_connected_detail_with_setting" />

        <LinearLayout
            android:id="@+id/lctn_connection_hub_connected_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50"
            android:orientation="vertical">

            <include layout="@layout/widget_input_hubinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
