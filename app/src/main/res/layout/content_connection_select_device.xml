<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhiteLight"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/connection_select_device"
                android:gravity="bottom|left"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_6"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/img_monit_package"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:textSize="@dimen/font_12sp"
                android:textColor="@color/colorTextGrey"
                android:text="@string/connection_package_components" />

            <View style="@style/divider_horizontal_line" />

            <RelativeLayout
                android:id="@+id/rctn_connection_select_device_monit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_row_device_button_height"
                android:background="@drawable/bg_btn_white_darklight_selector"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_connection_select_device_item1"
                    android:layout_width="@dimen/connection_row_device_icon_size"
                    android:layout_height="@dimen/connection_row_device_icon_size"
                    android:src="@drawable/ic_device_sensor"
                    android:layout_centerVertical="true" />

                <goodmonit.monit.com.kao.widget.NotoTextView
                    android:id="@+id/tv_connection_select_device_item1"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/device_type_diaper_sensor"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_connection_select_device_item1" />

                <ImageView
                    android:id="@+id/iv_connection_select_device_more1"
                    android:layout_width="@dimen/connection_row_direction_size"
                    android:layout_height="@dimen/connection_row_direction_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_direction_right_black_light" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_line"
                android:layout_marginStart="@dimen/padding_20"/>

            <RelativeLayout
                android:id="@+id/rctn_connection_select_device_hub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_row_device_button_height"
                android:background="@drawable/bg_btn_white_darklight_selector"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_connection_select_device_item2"
                    android:layout_width="@dimen/connection_row_device_icon_size"
                    android:layout_height="@dimen/connection_row_device_icon_size"
                    android:src="@drawable/ic_device_connection_aqmhub_activated"
                    android:layout_centerVertical="true" />

                <goodmonit.monit.com.kao.widget.NotoTextView
                    android:id="@+id/tv_connection_select_device_item2"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/device_type_hub"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_connection_select_device_item2" />

                <ImageView
                    android:id="@+id/iv_connection_select_device_more2"
                    android:layout_width="@dimen/connection_row_direction_size"
                    android:layout_height="@dimen/connection_row_direction_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_direction_right_black_light" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_line"
                android:layout_marginStart="@dimen/padding_20"/>

            <RelativeLayout
                android:id="@+id/rctn_connection_select_device_lamp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_row_device_button_height"
                android:background="@drawable/bg_btn_white_darklight_selector"
                android:paddingStart="@dimen/padding_20"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_connection_select_device_item3"
                    android:layout_width="@dimen/connection_row_device_icon_size"
                    android:layout_height="@dimen/connection_row_device_icon_size"
                    android:src="@drawable/ic_device_connection_lamp_activated"
                    android:layout_centerVertical="true" />

                <goodmonit.monit.com.kao.widget.NotoTextView
                    android:id="@+id/tv_connection_select_device_item3"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/device_type_lamp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_connection_select_device_item3" />

                <ImageView
                    android:id="@+id/iv_connection_select_device_more3"
                    android:layout_width="@dimen/connection_row_direction_size"
                    android:layout_height="@dimen/connection_row_direction_size"
                    android:layout_marginRight="@dimen/padding_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_direction_right_black_light" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_line"/>

            <RelativeLayout
                android:id="@+id/rctn_connection_select_device_elderly_diaper_sensor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/connection_row_device_button_height"
                android:background="@drawable/bg_btn_white_darklight_selector"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_connection_select_device_item4"
                    android:layout_width="@dimen/connection_row_device_icon_size"
                    android:layout_height="@dimen/connection_row_device_icon_size"
                    android:src="@drawable/ic_device_sensor"
                    android:layout_centerVertical="true" />

                <goodmonit.monit.com.kao.widget.NotoTextView
                    android:id="@+id/tv_connection_select_device_item4"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/device_type_elderly_diaper_sensor"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_connection_select_device_item4" />

                <ImageView
                    android:id="@+id/iv_connection_select_device_more4"
                    android:layout_width="@dimen/connection_row_direction_size"
                    android:layout_height="@dimen/connection_row_direction_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_direction_right_black_light" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_line" />

            <goodmonit.monit.com.kao.widget.NotoTextView
                android:id="@+id/tv_connection_select_device_description"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:textSize="@dimen/font_12sp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/device_monit_hub_connection_condition" />
            <!--
                <goodmonit.monit.com.kao.widget.NotoButton
                    android:id="@+id/btn_connection_select_device_hub_necessity"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:layout_marginStart="@dimen/padding_20"
                    android:gravity="start|center_vertical"
                    android:background="@drawable/bg_underline_black"
                    android:textSize="@dimen/font_14sp"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/connection_hub_necessity_title" />
            -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>