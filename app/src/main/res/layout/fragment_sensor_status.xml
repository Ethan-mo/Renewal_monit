<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/colorWhite">

		<ListView
			android:id="@+id/lv_frmt_sensor_status_row_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<goodmonit.monit.com.kao.widget.NotoTextView
			android:id="@+id/tv_frmt_sensor_status_empty_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textColor="@color/colorTextPrimary"
			android:textSize="@dimen/font_20sp"
			android:gravity="center"
			android:text="등록된 센서가 없습니다."/>

	</LinearLayout>

	<goodmonit.monit.com.kao.widget.NotoButton
		android:id="@+id/btn_frmt_sensor_status_add"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:textSize="50sp"
		android:text="+"
		android:background="@color/colorTransparent"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"/>
</RelativeLayout>