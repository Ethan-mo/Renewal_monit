<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/colorPrimary"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/padding_15"
        android:paddingEnd="@dimen/padding_15">

        <goodmonit.monit.com.kao.widget.NotoTextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_70"
            android:layout_marginEnd="@dimen/margin_70"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/font_16sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:text="Sign up"
            android:fontFamily="medium" />

        <goodmonit.monit.com.kao.widget.NotoButton
            android:id="@+id/btn_toolbar_left"
            android:layout_width="@dimen/toolbar_image_button_size"
            android:layout_height="@dimen/toolbar_image_button_size"
            android:background="@drawable/ic_add_black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <goodmonit.monit.com.kao.widget.NotoButton
            android:id="@+id/btn_toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTransparent"
            android:layout_gravity="right"
            android:text="Sign up"
            android:fontFamily="medium"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
